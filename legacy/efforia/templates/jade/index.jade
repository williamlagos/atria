    style
      html,body { background:white; }
  body
    #Navegacao.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(style='padding: 10px;', href='http://promova.co/')
          img(height='30', src='/static/img/promote.png')
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            #Progresso.content
              img(src='#{static_url}/img/progress.gif')
              .message.inline.divider
                | Carregando...
        ul.nav.navbar-nav.navbar-right
          if perm
            li
              a.app(href='promote/projects',next='projectcreate') 
               h2(style='color:white; margin:0')
                span.glyphicon.glyphicon-flash
                | &nbsp; Projetos
            li
              a.app(href='promote/calendar',next='eventcreate')
               h2(style='color:white; margin:0')
                span.glyphicon.glyphicon-cutlery
                | &nbsp; Eventos
            li
              a.app(href='promote/movements',next='movementcreate')
               h2(style='color:white; margin:0')
                span.glyphicon.glyphicon-fire
                | &nbsp; Movimentos
            li
              form.explore.navbar-form(action='explore',method='get',role="search")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-search
                    input.form-control(type="text",name='explore',placeholder="O que vocÃª quer encontrar hoje?")
    #Grade.transitions
      .col-xs-12.col-sm-6.col-md-3.col-lg-2.brick.stamp
        ul.block.nav.nav-pills.nav-stacked
          .profilehead
            img(src='#{user.profile.visual}',width='100%')
            h2
                dl
                    dt  {{ user.first_name }} 
            .id.hidden #{user.profile.id}
          if perm
            li(style='width:60%; margin-left:20%;')
              .paypal.hidden(style='margin-bottom:-20px;')
              .pagseguro.hidden
            li
              a.cart(href='efforia/basket') 
               h2.menu
                span.glyphicon.glyphicon-shopping-cart
                | &nbsp; Cesto de compras
            li
              a.cartclean(href='efforia/basketclean') 
               h2.menu
                span.glyphicon.glyphicon-trash
                | &nbsp; Limpar cesto
            li
              a.following(href='efforia/following') 
               h2.menu
                span.glyphicon.glyphicon-thumbs-up
                | &nbsp; Seguindo
            li
              a.page(href='efforia/config') 
               h2.menu
                span.glyphicon.glyphicon-cog
                | &nbsp; Ajustes
            li
              a.logout(href='#') 
               h2.menu
                span.glyphicon.glyphicon-log-out
                | &nbsp; Sair
          else
            li
              a.logout(href='#') 
               h2.menu
                span.glyphicon.glyphicon-log-out
                | &nbsp; Sair
