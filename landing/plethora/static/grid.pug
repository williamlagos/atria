head
    each app in apps
        script(type='text/javascript', src='#{static_url}js/#{app}app.js')
        script(type='text/javascript', src='#{static_url}js/#{app}events.js')
body
    .hidden.navigation(href='#{path}')     
      {{f.render}}
    each object in f.object_list
      if object.token == '' and object.id != p.id
        .col-xs-12.col-sm-6.col-md-3.col-lg-2.brick
          a.block.profile(href='#',style='display:block; background:black')
           .box.profile
            .content
              h2.name #{object.user.first_name}
              .centered #{object.career}
              .id.hidden #{object.id}
            if object.visual
              img(src='#{object.visual}',width='100%')
            else
              h1.centered
                span.glyphicon.glyphicon-user.big-glyphicon
            .content.centered
              #{object.bio}
           .date Entrou em #{object.date.day} de #{object.month} 
      if object.token == '$$'
        .col-xs-12.col-sm-6.col-md-3.col-lg-2.brick
         a.block.sellable(href='#',style='display:block; background-color:white')
          .box(style='background-color:#333')
            .content
              h2.title(style='color:white') #{object.name_trimmed}
              if object.paid
                h2.lightgreen Valor j&aacute; pago
              h1.centered
               span.label.label-info.big-label
                | R$ #{object.value}0
              h1.centered
               span.glyphicon.glyphicon-shopping-cart.giant-glyphicon(style='color:white; margin-bottom:10px')
              .id.hidden #{object.id}

